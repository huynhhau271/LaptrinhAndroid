<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile_Activity"
    tools:visibility="visible"
    android:background="#044455">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/bia_profile" />

    <androidx.cardview.widget.CardView
        android:id="@+id/carViewImg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="250dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avt_profile"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="380dp"
        android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/aldrich"
            android:text="TO THANH DUNG"
            android:textColor="#fff"
            android:textSize="24dp" />

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tothanhdung@gmail.com"
            android:textSize="11dp"
            android:textColor="#fff"
            android:textStyle="italic" />

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0396 042 820"
            android:textSize="11dp"
            android:textColor="#fff"
            android:textStyle="italic" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="390dp"
        android:layout_below="@+id/carViewImg"
        android:layout_marginTop="71dp"
        android:background="#044455 "
        android:orientation="vertical">

        <TextView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/style_textview_profile"
            android:drawableStart="@drawable/ic_baseline_payment_24"
            android:gravity="center"
            android:text="PayMent Mothods"
            android:textColor="#000" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/style_textview_profile"
            android:drawableStart="@drawable/ic_baseline_notifications_active_24"
            android:gravity="center"
            android:text="Notifications"
            android:textColor="#000" />

        <TextView
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/style_textview_profile"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:gravity="center"
            android:text=" Change Password"
            android:textColor="#000" />

        <TextView
            android:id="@+id/textViewLogout_profile"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/style_textview_profile"
            android:drawableStart="@drawable/ic_baseline_exit_to_app_24"
            android:gravity="center"
            android:text="Logout"
            android:textColor="#000" />
    </LinearLayout>
</RelativeLayout>