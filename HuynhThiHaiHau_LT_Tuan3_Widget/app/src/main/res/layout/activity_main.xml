<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/caro"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBox
        android:id="@+id/checkboxThree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="3dp" />

    <CheckBox
        android:id="@+id/checkboxTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/checkboxThree"
        android:layout_marginTop="-107dp" />

    <CheckBox
        android:id="@+id/checkboxOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/checkboxTwo"
        android:layout_marginBottom="115dp" />

    <SeekBar
        android:id="@+id/seekbarOne"
        android:layout_width="678dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="118dp"
        android:layout_toRightOf="@id/checkboxThree"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/icon1" />

    <SeekBar
        android:id="@+id/seekbarTwo"
        android:progressDrawable="@android:color/transparent"
        android:layout_width="677dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbarOne"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="-100dp"
        android:layout_toRightOf="@id/checkboxTwo"
        android:thumb="@drawable/icon2" />

    <SeekBar
        android:id="@+id/seekbarThree"
        android:progressDrawable="@android:color/transparent"
        android:layout_width="676dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/seekbarTwo"
        android:layout_marginLeft="6dp"
        android:layout_marginBottom="-102dp"
        android:layout_toRightOf="@id/checkboxOne"
        android:thumb="@drawable/icon3" />

    <ImageView
        android:id="@+id/imgAnimal"
        android:layout_width="297dp"
        android:layout_height="96dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/animalcrossing" />
    <TextView
        android:id="@+id/textviewDiemSo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="100"
        android:textSize="50sp"
        android:textColor="#ff00"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgAnimal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="186dp"
        android:layout_marginTop="137dp"
        android:layout_marginEnd="151dp"
        app:srcCompat="@drawable/playbutton" />

</RelativeLayout>