<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail"
    android:background="#FD9494"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_dt_title"
        android:layout_width="201dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#131313"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="42dp" />

    <TextView
        android:id="@+id/tv_dt_des"
        android:layout_width="356dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="#131313"
        android:textSize="30dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="89dp"
        tools:layout_editor_absoluteY="476dp" />

    <ImageView
        android:id="@+id/iv_dt_ha"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="172dp"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="116dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextNumberA"
            android:layout_width="144dp"
            android:layout_height="92dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nhập số thứ nhất"/>

        <EditText
            android:id="@+id/editTextNumberB"
            android:layout_width="125dp"
            android:layout_height="91dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Nhập số thứ hai"/>

        <Button
            android:id="@+id/btnTinh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tính" />
    </LinearLayout>

    <TextView
        android:id="@+id/txthienthiKetqua"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center"
        android:text="Kết quả"
        android:textColor="#131313"
        android:textSize="25dp"
        android:textStyle="bold" />

</LinearLayout>